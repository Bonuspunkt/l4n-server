@require 'definitions'

html, body
    margin: 0
    padding: 0

    background: $background
    color: $text

    font-family: sans-serif

body
    margin: 5rem auto 2rem
    max-width: 50rem

footer
    border-top: .01rem solid $text
    margin-top: 2rem
    text-align: center
    font-size: small
    font-family: monospace

a, a:visited
    color: $text

a:hover
    color: darken($text, 20)


*:focus
    outline: .1rem solid #080

button, .button
    border: 0
    background-color: $color-bg
    color: $color-text
    font-size: 1rem
    padding: .5rem 1rem

    &:disabled
        background-color: darken($color-bg, 20)
        color: darken($color-text, 20)


.button
    display: inline-block


table
    width: 100%
    border-collapse: collapse

    tbody tr:nth-child(odd)
        background: $background-alt
    th, td
        padding: .5rem
        overflow: hidden
        text-overflow: ellipsis

.noPad
    padding: 0

.error
    color: #f00


form.inline
    display: inline-block

form.inline button
    padding: 0
